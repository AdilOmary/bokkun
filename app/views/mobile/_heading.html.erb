<div class='mobile-heading'>
  <div class="heading-text">
    <h3><%= current_trip.start_date.strftime("%m/%d/%y") %> &#8212;
 <%= current_trip.end_date.strftime("%m/%d/%y") %> </h3>
    <h1><%= current_trip.name %></h1>
    <h2><%= current_trip.customer %></h2>
  </div>
  <div class="budget">
    <p>Remaining Budget</p>
    <div class="budget-bar">
      <div class="budget-empty">
        <div class="budget-percentage"></div>
        <!-- Remember to use embedded Ruby to set the width of budget-percentage -->
      </div>
    </div>
  </div>
  <div class="new-button">
    <i class="fas fa-plus-circle"></i>
  </div>
</div>
<div class="mobile-cards">
  <div class="mobile-card text-center">
    <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Search trips"
              %>
  </div>
</div>

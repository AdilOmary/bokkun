<%= simple_form_for([receipt, receipt_item], remote: true, html: {class: "form-style m-0 p-0"}) do |f| %>
  <tr style="height: 56px;">
    <td width="50%"><%= f.input :name, label: false, placeholder: 'item' %></td>
    <td width="20%"><%= f.input :tax, as: :radio_buttons, collection: [[8, '8%'], [10, '10%']], label: false, label_method: :second, value_method: :first %></td>
    <td width="25%"><%= f.input :amount, label: false, placeholder: 'price' %></td>
    <td width="5%"></td>
  </tr>
  <tr>
    <td width="100%">
      <%= button_tag type: 'submit', class: "btn btn-approve m-0" do %>
        <i class="fas fa-plus p-2"></i>
      <% end %>
    </td>
  </tr>
<% end %>

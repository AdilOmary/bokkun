
<div class="container">
  <%= cl_image_tag @receipt.photo.key, height: 300, width: 400, crop: :fill if @receipt.photo.attached? %>
  <h1>ADD AN ITEM</h1>
  <%= simple_form_for [@receipt, @receipt_item] do |f| %>
    <%= f.input :name %>
    <%= f.input :amount %>
    <%= f.input :tax %>
    <%= f.submit %>
  <% end %>
</div>

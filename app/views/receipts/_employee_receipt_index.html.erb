<div class="mobile-cards">
  <% current_trip.trip_budgets.each do |trip_budget| %>
    <button type="button" class="mobile-card" data-toggle="collapse" data-target="#a-<%= trip_budget.id %>" aria-expanded="false" aria-controls="<%= trip_budget.id %>">
      <h3><%= trip_budget.budget.capitalize_name %></h3>
      <%= render 'shared/budget_bar', trip_budget: trip_budget %>
    </button>
    <div class="collapse" id="a-<%= trip_budget.id%>">
      <div class="contract-content">
        <div class="receipt-list">
          <% if trip_budget.receipts.empty? %>
            <p>No receipts entered.</p>
          <% else %>
            <% trip_budget.receipts.each do |receipt| %>
              <div class="receipt-name">
                <p><%= link_to receipt.company, receipt_path(receipt) %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

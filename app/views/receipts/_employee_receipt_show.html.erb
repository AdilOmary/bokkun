<div class="mobile-wrapper">
  <%= render 'receipts/employee_receipt_heading', receipt: @receipt %>
  <% if @receipt.photo.attached? %>
    <div class="container receipt-container">
      <%= cl_image_tag @receipt.photo.key, effect: "trim:20" if @receipt.photo.attached? %>
    </div>
  <% else %>
    <%= simple_form_for [@receipt.trip, @receipt ], html: {class: "form-style form_submit_photo" } do |f| %>
      <div class="container mt-5">
        <p>Please add a photo of the receipt.</p>
        <%= f.input :photo, label: false, as: :file, input_html: { id: :submit_photo } %>
      </div>
    <% end %>
  <% end %>
  <%= render 'receipts/employee_receipt_item_list', receipt: @receipt %>
  <%= link_to trip_path(@receipt.trip) do %>
    <div class="float-check halo">
      <i class="fas fa-check my-float-check"></i>
    </div>
  <% end %>
</div>
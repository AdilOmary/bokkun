<%= simple_form_for [trip, receipt], html: {class: "form-style" } do |f| %>
  <%= f.input :company %>
  <%= f.input :total_amount, as: :hidden %>
  <div class="form-row">
    <div class="col-6">
      <%= f.input :date, as: :string, input_html: {class: "datepicker", value: Date.today} %>
    </div>
    <div class="col-6">
      <%= f.association :trip_budget, collection: trip.trip_budgets, label_method: lambda {|trip_budget| "#{trip_budget.budget.name}"}, include_blank: false %>
    </div>
  </div>
  <%= f.input :photo, as: :file  %>
  <%= button_tag type: :submit, class: "btn btn-approve w-30 submit-button", id:"submit-receipt" do %>
    Add the receipt
  <% end %>
  <div class="icon-back mx-auto">
    <%= link_to :back do %>
      <%= image_tag "left-arrow.png" %>
    <% end %>
  </div>
<% end %>
<%= render 'shared/side-bar' %>
<div class="container">
  <h1>NEW FORM</h1>
  <p>Enter all the informations</p>
  <%= simple_form_for [@trip, @receipt] do |f| %>
    <%= f.input :company %>
    <%= f.input :date %>
    <%= f.input :total_amount %>
    <%= f.input :tax_amount %>
    <%= f.association :trip_budget, collection: @trip.budgets, include_blank: false %>
    <%= f.input :photo, as: :file  %>
    <%= f.submit "Add Receipt" %>
  <% end %>
  <div class="card-detail">
    <% if current_user.manager %>
      <%= link_to "Go back", employer_dashboard_path, class: "btn btn-approve w-30" %>
    <% else %>
      <%= link_to "Go back", employee_dashboard_path, class: "btn btn-approve w-30" %>
    <% end %>
  </div>
</div>

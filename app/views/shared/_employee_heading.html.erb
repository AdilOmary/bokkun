<div class='mobile-heading'>
  <div class="heading-text">
    <h4><%= current_user.current_trip.start_date.strftime("%m/%d/%y") %> &#8212;
 <%= current_user.current_trip.end_date.strftime("%m/%d/%y") %> </h4>
    <h2>visiting <%= current_trip.customer %></h2>
    <h4>in <%= current_trip.destination %></h4>
  </div>
  <div class="budget">
    <p class="budget-title">Remaining Budget</p>
    <div class="budget-bar heading">
      <div class="budget-empty">
        <p><%= number_to_currency(current_user.current_trip.total_remaining, unit: "￥", separator: ",", precision: 0) %>/<%= number_to_currency(current_user.current_trip.total_budget, unit: "￥", separator: ",", precision: 0) %> </p>
        <% if current_user.current_trip.total_remaining.positive? %>
          <div class="budget-percentage" style="width: <%= current_user.current_trip.budget_percent %>%"></div>
        <% else %>
          <div class="in-red"></div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

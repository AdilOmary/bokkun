<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to employee_dashboard_path, class: "navbar-brand" do %>
    <h3>Bokkun</h3>
  <% end %>
  <%= link_to "#", id: "navbarDropdown", data: { toggle: "dropdown", target: '#navbarSupportedContent' }, 'aria-haspopup': true, 'aria-expanded': false, 'aria-label': 'navbarSupportedContent' do %>
    <% avatar = @current_user.avatar.nil? ? 'https://res.cloudinary.com/kinzame-herokuapp-com/image/upload/v1583746668/placeholder/Missing_avatar_u1azml.svg' : @current_user.avatar %>
    <%= image_tag avatar, class: "avatar", alt: "avatar-large", style: "border: 1px solid white; margin-right: 8px;" %>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

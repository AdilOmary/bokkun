<div class="mobile-cards">
  <% @trips.each do |trip| %>
    <%= link_to trip_path(trip) do %>
      <div class="mobile-card">
        <h3><%= trip.destination %></h3>
        <p> <%= trip.customer %></p>
        <p><%= trip.start_date.strftime("%m/%d/%y") %> &#8212;<%= trip.end_date.strftime("%m/%d/%y") %></p>
      </div>
    <% end %>
  <% end %>
</div>

<%= render 'shared/side-bar' %>
<div class="container employer-content">
  <div class="card-detail">
    <h1> <%= @user.first_name.titleize %> <%= @user.last_name.titleize %></h1>
    <h2> <%= @user.job_title %></h2>
    <div class="card-detail-body">
      <div class="card-detail-info">
        <ul>
          <% @user.trips.each do |trip| %>
            <div class="argument">
            <div class="argument-info">
              <p>Destination : <%= trip.destination %></p>
              <p>Purpose : <%= trip.purpose  %></p>
              <p>Customer : <%= trip.customer %></p>
            </div>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <%= link_to "Go Back", :back, class: "btn btn-approve w-30" %>
</div>

